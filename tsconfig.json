{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "jsx": "react-native",
    "esModuleInterop": true,
    "types": [
      "jest"
    ],
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "ES2022"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}